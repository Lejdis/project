<div class="rw-ui-container rw-urid-0"></div>
 <h2>Komentarze</h2>
<% if @film.comments.any? %>
 
 <% @film.comments.each do |comment| %>
  <%= image_tag comment.gravatar_url %>
 <p>Autor:<br><%= comment.email %></p>
    <p>Dodano:<br><%= comment.created_at %></p>
   <div class="comment">
     <b>Tekst:</b> <%= comment.body %>
        </div>
<% if user_signed_in? %>
  <% if comment.email == current_user.email %>
    <%= link_to "Usuń komentarz", [@film, comment], :confirm => "Czy aby napewno?", :method => :delete %><br/>
  <% end %>
<% end %>

 <% end %>

<% else %>
<p> Narazie żadnych komentarzy. </p>
<% end %>

<br/>
<% if user_signed_in? %>
<h2>Dodaj komentarz</h2>
<%= form_for [@film, @film.comments.build] do |f| %>
  <%= f.error_messages %>
  <p>
   <%= image_tag current_user.gravatar_url %>
    <%= f.label :email, "Autor" %><br>
    <%= f.text_field :email, :value=> current_user.email, :readonly=> true %>
  </p>
  <p><%= f.text_area :body, :rows => 4 %></p>
   <p><%= f.submit %></p>
<% end %>
<br/><br/>


<%= link_to 'Edytuj', edit_film_path(@film) %> |
<% end %>
